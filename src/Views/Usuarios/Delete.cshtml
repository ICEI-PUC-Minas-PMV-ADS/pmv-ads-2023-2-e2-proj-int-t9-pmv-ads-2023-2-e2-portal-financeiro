@model PORTAL2023.Models.Usuario

@{
    ViewData["Title"] = "Apagar";
}

<h1>Apagar usuário</h1>

<h3>Tem certeza que deseja remover este usuário?</h3>
<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Perfil)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Perfil)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-outline-info">Voltar</a> |
        <input type="submit" value="Apagar" class="btn btn-outline-danger" />

    </form>
</div>
