@model PORTAL2023.Models.Despesa

@{
    ViewData["Title"] = "Apagar";
}

<h1>Remover uma despesa</h1>

<h3>Tem certeza que deseja remover essa despesa?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Conta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Conta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Instituição)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Instituição)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descrição)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descrição)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-outline-info">Voltar</a> |
        <input type="submit" value="Apagar" class="btn btn-outline-danger" />
    </form>
</div>
